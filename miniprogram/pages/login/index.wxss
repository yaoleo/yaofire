.login-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 0 20px;
}

.login-header {
  width: 100%;
  text-align: center;
  color: white;
  margin-bottom: 40px;
}

.login-header .title {
  display: block;
  font-size: 48px;
  font-weight: bold;
  margin-bottom: 10px;
}

.login-header .subtitle {
  display: block;
  font-size: 16px;
  opacity: 0.8;
}

.login-form {
  width: 100%;
  max-width: 400px;
  background: white;
  border-radius: 16px;
  padding: 40px 30px;
  box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
  text-align: center;
}

.form-title {
  display: block;
  font-size: 24px;
  font-weight: bold;
  color: #333;
  margin-bottom: 10px;
}

.description {
  display: block;
  font-size: 14px;
  color: #999;
  margin-bottom: 30px;
}

.btn-wechat {
  width: 100%;
  padding: 14px;
  background: #09b83e;
  color: white;
  border-radius: 12px;
  font-weight: 600;
  font-size: 16px;
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 8px;
  margin-bottom: 20px;
}

.btn-wechat:active {
  opacity: 0.8;
}

.btn-wechat text {
  display: inline;
}

.error-message {
  padding: 12px;
  background: #fee;
  color: #c00;
  border-radius: 8px;
  text-align: center;
  font-size: 13px;
  margin-bottom: 20px;
}

.retry-text {
  display: block;
  color: #667eea;
  font-weight: 600;
  margin-top: 8px;
  text-decoration: underline;
}

.tips {
  width: 100%;
  max-width: 400px;
  margin-top: 30px;
  text-align: center;
  color: rgba(255, 255, 255, 0.9);
  font-size: 13px;
}

.tips text {
  display: block;
  margin-bottom: 8px;
}
